<Window x:Class="Kinect_SE_Tool.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="Kinect Software Modelling Tool" Height="720" Width="1280" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" Closing="Window_Closing" WindowState="Maximized" MinHeight="768" MinWidth="1024" SizeChanged="Window_SizeChanged">
    
    <!--<Grid>
        
        <TextBlock Height="23" HorizontalAlignment="Left"  Margin="314,28,0,0" Name="textBlock1" VerticalAlignment="Top" Width="50" Text="Zoom" Focusable="False" IsManipulationEnabled="True" FontSize="18" />
        
        
        
        
        
        
        
    </Grid>-->

    <Grid>
        <!--<StackPanel DockPanel.Dock="Top" Height="100">
            <Button Content="Top"  Width="80"></Button>
        </StackPanel>-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="340" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center">JavaDoc Explorer</TextBlock>
        <Canvas Grid.Column="0" Grid.Row="1"  Name="main_view"  MinHeight="417" MinWidth="650"  Focusable="False" IsManipulationEnabled="False" Background="#DBD4D4D4" ClipToBounds="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,0,0,0"></Canvas>
        <Label Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,340,0" Content="Page" Height="28" HorizontalAlignment="Right" Name="page_info" Width="151" />
        <Label Grid.Row="2" Grid.ColumnSpan="2" Margin="10,0,0,0" Content="Depth:" Height="28" HorizontalAlignment="Left" Name="depth_info" Width="750" />
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" MinWidth="320" Margin="10,0,10,0">
            <Grid MinHeight="240" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <TextBlock FontSize="28" Grid.Row="0" Grid.Column="0">Controls</TextBlock>
                <!--<TextBlock Height="23" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Name="textBlock1" VerticalAlignment="Center" Width="50" Text="Zoom" Focusable="False" IsManipulationEnabled="True" FontSize="18" />-->
                <TextBlock FontSize="20"  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Get Javadoc</TextBlock>
                <TextBlock FontSize="20"  Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Zoom</TextBlock>
                <Button Content="Browse..." Grid.Row="1" Grid.Column="1" Height="40" Name="button1" VerticalAlignment="Center" Width="155" FontSize="18" Click="browse_for_file" Focusable="False" />
                <Button Content="-" Grid.Row="2" Grid.Column="1" Height="40" HorizontalAlignment="Left" KeyDown="keyboard_input" Margin="15,0,0,0" Name="zoom_out_button" VerticalAlignment="Center" Width="50" Click="zoom_out_Click" FontSize="18" />
                <Button Content="+" Grid.Row="2" Grid.Column="1" Height="40" HorizontalAlignment="Right" Name="zoom_in_button" VerticalAlignment="Center" Margin="0,0,15,0" Width="50" Click="zoom_in_Click" Focusable="False" FontSize="18" />

            </Grid>

            <!--<my:KinectSensorChooser Name="kinectSensorChooser1" VerticalAlignment="Bottom" Width="320" Height="240" Background="#FFD4D4D4" Panel.ZIndex="0" Margin="0,0,0,252" KinectSensorChanged="kinectSensorChooser1_KinectSensorChanged" />-->
            <TextBlock Name="skeleton_mask" VerticalAlignment="Bottom" Background="#FFFFFF" Height="30" Width="320" FontSize="20" TextAlignment="Center" Margin="0,0,0,380">Camera Turned Off</TextBlock>
            
            <Image Height="240" Name="color_view" VerticalAlignment="Bottom" Width="320" Margin="0,0,0,0" />
            <my:KinectColorViewer Name="color_viewer" VerticalAlignment="Bottom" Width="320" Height="240" Margin="0,0,0,252" Kinect="{Binding ElementName=kinectSensorChooser2, Path=Kinect}"/>
            <my:KinectSkeletonViewer Name="kinectSkeletonViewer1" VerticalAlignment="Bottom" Height="240" Width="320" Kinect="{Binding ElementName=kinectSensorChooser2, Path=Kinect}" ClipToBounds="True" Margin="0,0,0,252" />
            <TextBlock Name="speech_feedback_label" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,205" Background="#000000" Height="35" Width="320" FontSize="24" TextAlignment="Left" Foreground="White" TextWrapping="Wrap">Speech Feedback:</TextBlock>
            <TextBlock Name="speech_feedback_value" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,40" Background="#D4D4D4" Height="165" Width="320" FontSize="60" TextAlignment="Center" Foreground="Yellow" TextWrapping="Wrap"></TextBlock>
            <TextBlock Name="Status_Label" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0" Background="#000000" Height="35" Width="80" FontSize="24" TextAlignment="Center" Foreground="White" TextWrapping="Wrap">Status</TextBlock>
            <TextBlock Name="Status_Value" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0" Background="#D4D4D4" Height="35" Width="240" FontSize="16" TextAlignment="Center" Foreground="Blue" TextWrapping="Wrap"></TextBlock>
            <my:KinectSensorChooser  Name="kinectSensorChooser2" VerticalAlignment="Bottom" Width="320" Height="240" KinectSensorChanged="kinectSensorChooser1_KinectSensorChanged" Margin="0,0,0,252" />
        </Grid>
        
    </Grid>
</Window>